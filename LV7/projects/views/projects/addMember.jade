extends ../layout

block content
  h1 Dodaj člana tima za #{project.name}
  
  if errors
    ul.errors
      each error in errors
        li= error.msg
  
  form(action=`/projects/${project._id}/team`, method='POST')
    div.form-group
      label(for="userId") Odaberi korisnika:
      select(name='userId', id="userId", required)
        option(value='') Odaberi korisnika
        each user in users
          option(value=user._id)= user.name + ' (' + user.email + ')'
    
    div.form-actions
      button.btn.btn-success(type='submit') Dodaj člana
      a.btn(href=`/projects/${project._id}`) Odustani